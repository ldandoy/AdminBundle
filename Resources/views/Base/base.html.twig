<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}StartPack{% endblock %}</title>
        <meta name="description" content="description de la page" />
        <meta name="keywords" content="keywords de la page" />
        
        <link rel="stylesheet" href="{{ asset('bundles/admin/css/utils.css') }}" type="text/css" />
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap.no-icons.min.css" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome.css" rel="stylesheet">
        <link href="//netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome-ie7.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/admin/css/admin.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/admin/css/tablecloth.css') }}" type="text/css" />
        {% block css %}{% endblock %}

        <script src="http://code.jquery.com/jquery-1.8.2.js" type="text/javascript"></script>
        <script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js" type="text/javascript"></script>
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js"></script>
        <script src="{{ asset('bundles/admin/js/jquery.tablecloth.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/admin/js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
        {% block js %}{% endblock %}
    </head>
    <body>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/admin/"><span class="tRed">StartPack</span></a>
                    <div class="nav-collapse">
                        {% if is_granted('ROLE_ADMIN') %}
                        <ul class="nav">
                            <li class="{% if activeUser is defined %}active{% endif %}">
                                <a href="{{ path('admin_user_index') }}">User</a>
                            </li>
                            <li class="{% if activeCMS is defined %}active{% endif %}">
                                <a href="{{ path('admin_cms_index') }}">CMS</a>
                            </li>
                            <li class="{% if activeConfig is defined %}active{% endif %}">
                                <a href="{{ path('admin_config_index') }}">Configuration</a>
                            </li>
                        </ul>
                        <form class="form-inline nav pull-right" method="post" action="{{ path('admin_logout') }}">
                            <button class="btn btn-danger" type="submit">DÃ©connexion</button>
                        </form>
                        {% endif %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div><!-- /container -->
    </body>
</html>
