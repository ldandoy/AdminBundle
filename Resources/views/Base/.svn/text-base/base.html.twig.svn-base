{# app/Resources/views/Base/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{% endblock %}</title>
        <link href="{{ asset('bundles/core/css/utils.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/core/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/core/css/tablecloth.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/admin/css/admin.css') }}" type="text/css" rel="stylesheet" />

        <script src="{{ asset('bundles/core/js/jquery-1.7.2.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/core/js/jquery-ui-1.8.21.custom.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/core/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/core/js/jquery.metadata.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/core/js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/core/js/jquery.tablecloth.js') }}" type="text/javascript"></script>

        {% block javascript %}{% endblock %}
    </head>
    <body onload="initialize()">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/admin/">Sugarprice</a>
                    <div class="nav-collapse">
                        {% if is_granted('ROLE_ADMIN') %}
                        <ul class="nav">
                            <li class="{% if activeClient is defined %}active{% endif %}">
                                <a href="{{ path('admin_client_list') }}">Clients</a>
                            </li>
                            <li class="{% if activePartenaire is defined %}active{% endif %}">
                                <a href="{{ path('admin_partenaire_list') }}">Partenaires</a>
                            </li>
                            <li class="{% if activeCommande is defined %}active{% endif %}">
                                <a href="{{ path('admin_listingCommande') }}">Commandes</a>
                            </li>
                            <li class="{% if activeContact is defined %}active{% endif %}">
                                <a href="{{ path('admin_listingContact') }}" {% if activeContact is defined %}active{% endif %}>Contacts</a>
                            </li>
                            <li class="{% if activeCategorie is defined %}active{% endif %}">
                                <a href="{{ path('admin_categorie_list') }}" {% if activeContact is defined %}active{% endif %}>Catégories</a>
                            </li>
                            <li class="{% if activeEnseigne is defined %}active{% endif %}">
                                <a href="{{ path('admin_enseigne_list') }}" {% if activeContact is defined %}active{% endif %}>Enseignes</a>
                            </li>

                            <li class="dropdown {% if activeCMS is defined %}active{% endif %}">
                                <a href="#" class="dropdown-toggle" {% if activeContact is defined %}active{% endif %} data-toggle="dropdown">CMS <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li class="{% if activeCMS is defined %}active{% endif %}">
                                        <a href="{{ path('admin_cms_homepage') }}">Home Page</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="{% if activeNewsletter is defined %}active{% endif %}">
                                <a href="{{ path('admin_newsletter_list') }}" {% if activeNewsletter is defined %}active{% endif %}>Newsletter</a>
                            </li>
                        </ul>
                        <form class="form-inline nav pull-right" method="post" action="/admin/logout">
                            <button class="btn btn-danger" type="submit">Déconnexion</button>
                        </form>
                        {% endif %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div><!-- /container -->
    </body>
</html>
