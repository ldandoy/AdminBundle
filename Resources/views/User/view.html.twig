{% extends 'AdminBundle:Base:base.html.twig' %}

{% block title %}StartPack | Admin - Login{% endblock %}

{% block body %}
    <div class="row">
    	<div class="span12">
            <div class="page-header">
                <h3 class="fLeft">Liste des utilisateurs</h2>
                <div class="fRight">
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info"><i class="icon-pencil"></i> Editer</a>
                    <a href="" class="btn btn-danger"><i class="icon-trash"></i> Supprimer</a>
                </div>
                <br class="sep" />
            </div>
    		<table id="myTable" class="tablesorter"> 
                <thead> 
                    <tr> 
                        <th colspan="2">{{ user.userInfo.lastName ~ ' ' ~  user.userInfo.firstName}}</th>
                    </tr>
                </thead> 
                <tbody>                    
                    <tr>
                        <td>Email</td>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <td>Adresse</td>
                        <td>{{ user.userInfo.address }}</td>
                    </tr>
                    <tr>
                        <td>Ville</td>
                        <td>{{ user.userInfo.ville }}</td>
                    </tr>
                    <tr>
                        <td>Code postal</td>
                        <td>{{ user.userInfo.cp }}</td>
                    </tr>
                    <tr>
                        <td>Newsletter</td>
                        <td>{% if user.userInfo.optin == 1 %} Oui {% else %} Non {% endif %}</td>
                    </tr>
                </tbody> 
            </table>

            <p align="right">
                <a href="{{ path('admin_user_index') }}" class="btn">Retour</a>
            </p>
		</div>
	</div>

    <script type="text/javascript">
        $(document).ready(function() 
            { 
                // $("#myTable").tablesorter();
                $("#myTable").tablecloth({
                    theme: "stats",
                    striped: true,
                    sortable: true,
                    condensed: false,
                    bordered: false,
                    clean: false
                });
            }
        ); 
    </script>
{% endblock %}